#exercice 3
from math import pi

class Cercle:
    def __init__(self, rayon: int):
        self.radius = radius

    def __str__(selfs):
        return f"Circle: rayon={self.rayon}"

    def calcul_air(self):
        return pi * self.rayon ** self.rayon

    def calcul_circonference(self):
        return pi * self.rayon ** 2

