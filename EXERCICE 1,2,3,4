#exercice 1
class StringFoo:
    def __init__(self):
        self.chaise = str

    def set_string(self, paramètre):
        self.chaise = paramètre

    def print_string(self):
        print(self.chaise)

object = StringFoo
object.set_string('Ornel')
object.print_string()

