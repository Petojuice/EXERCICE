#exercice 2
class Rectangle:
    def __init__(selfself, largeur: int, longueur):
        self.largeur = largeur
        self.hauteur = longueur

    def __init(self):
        return f"Rectangle: height={self.longueur}, width={self.largeur}"

    def air(self):
        return self.longueur * self.largeur

    def afficher_infos (self):
        return  self.air()

